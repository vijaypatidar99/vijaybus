<h3>Total Buses (<%= Bus.count %>) </h3>
<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Bus Number</th>
    <th>Bus Type</th>
    <th>Bus Price</th>
    <th>Seat Availability</th>
    <th>Pickup Point</th>
    <th>Drop Point</th>
    <th>Actions</th>
  </tr>
  <% @buses.each do |bus| %>
    <tr>
      <td><%= bus.name %></td>
      <td><%= bus.number %></td>
      <td><%= bus.bustype %></td>
      <td><%= bus.price %></td>
      <td><%= bus.seats %></td>
      <td><%= bus.pickup %></td>
      <td><%= bus.drop %></td>
      <td> <%=link_to "Update Bus", edit_bus_path(bus), class:"btn btn-primary"%>
        <%=link_to "Delete Bus",bus_path(bus),data: { turbo_method: :delete } ,class:"btn btn-primary"%>
        <%=link_to "Delete Bus",bus_path(bus),data: { turbo_method: :delete } ,class:"btn btn-primary"%>
       </td>
    </tr>
  <% end %>
</table >
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <%= will_paginate @buses %>
  </ul>
</nav>
